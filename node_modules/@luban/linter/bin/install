#!/usr/bin/env sh
checkReact(){
    if [ -d $INIT_CWD/node_modules/react  -o  -d $INIT_CWD/node_modules/@types/react  ]
    then 
        return 0
    else 
        return 1
   fi
}

path=$INIT_CWD/node_modules/@luban/linter
target=$INIT_CWD/.eslintrc.json

if [ -d $path ]
then 
    if checkReact
    then 
        cp "$path/.eslintrc.react.json" "$target"
    else 
        cp "$path/.eslintrc.json" "$target"
    fi
fi
